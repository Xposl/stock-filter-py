# 设置时区为东八区
TZ='Asia/Shanghai'

# 设置鉴权Token（请替换为实际的管理员token）
AUTH_TOKEN='YOUR_ADMIN_TOKEN_HERE'

# 美股：每周二到周六早上6点
0 6 * * 2-6 curl -X POST -H "Authorization: Bearer $AUTH_TOKEN" http://localhost:8000/investnote/cron/ticker/us/update

# A股：每周一到周五下午3点10分
10 15 * * 1-5 curl -X POST -H "Authorization: Bearer $AUTH_TOKEN" http://localhost:8000/investnote/cron/ticker/zh/update

# 港股：每周一到周五下午5点10分
10 17 * * 1-5 curl -X POST -H "Authorization: Bearer $AUTH_TOKEN" http://localhost:8000/investnote/cron/ticker/hk/update

# 应用配置
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库类型设置，可选值: "sqlite", "mysql" 或 "postgresql"
DB_TYPE=mysql

# PostgreSQL配置 (当DB_TYPE=postgresql时使用)
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=database

# SQLite配置 (当DB_TYPE=sqlite时使用)
SQLITE_DB_PATH=investnote.db

# 鉴权服务配置
AUTH_ENABLED=true
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=50051

# Pyppeteer配置 (用于浏览器自动化)
# 运行 python tools/init_pyppeteer.py 脚本后获取以下路径
# PYPPETEER_CHROMIUM_PATH=/path/to/chromium  # 指定Chromium浏览器的路径
# PYPPETEER_HOME=/path/to/pyppeteer/home     # 指定pyppeteer的配置目录
# PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true      # 设置为true可跳过重新下载浏览器

# 抑制gRPC相关的警告日志
# GRPC_VERBOSITY=ERROR # 设置为ERROR以抑制INFO级别的警告
# GRPC_TRACE= # 设置为空以抑制TRACE级别的警告

# AI测试环境变量
AI_TEST_MODE=mock
QWEN_API_KEY=your-qwen-api-key-here
SILICON_FLOW_API_KEY=your-silicon-flow-api-key-here


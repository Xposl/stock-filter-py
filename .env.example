# AI Chatbot System 环境配置文件
# 复制此文件为 .env 并填入真实的配置值

# 应用程序配置
APP_NAME=TicketTrend
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# 运行模式配置
SINGLETON_MODE=true

# 测试模式配置 (开发调试用)
TEST_MODE=false
TEST_USER_ID=0
TEST_USERNAME=test_user

# 认证服务配置 (gRPC)
AUTH_ENABLED=false
# 单例模式配置 - 当NACOS_ENABLED=false时使用
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=9091
# 认证服务配置参数
AUTH_TIMEOUT=30
AUTH_RETRY_MAX=3
AUTH_RETRY_DELAY=1.0

# AI 平台配置
PLATFORM_ID=
CLIENT_SECRET=

# Nacos 配置 (可选关闭)
NACOS_ENABLED=false
NACOS_SERVER_URL=http://localhost:8848
NACOS_NAMESPACE=ai-service
NACOS_GROUP=DEFAULT_GROUP
NACOS_USERNAME=nacos
NACOS_PASSWORD=nacos
NACOS_DATA_ID=ai-service-config.yaml
# Nacos服务发现配置 - 当NACOS_ENABLED=true时使用
AUTH_SERVICE_NAME=auth-service

# 服务注册配置
SERVICE_NAME=ticket-trend-service
SERVICE_IP=127.0.0.1
SERVICE_PORT=8000
SERVICE_WEIGHT=1.0
SERVICE_ENABLED=true
SERVICE_HEALTHY=true

# 数据库配置
DATABASE_URL=
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ai_chatbot
DB_USER=root
DB_PASSWORD=

# 数据库连接配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis配置
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志设置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 性能配置
MAX_WORKERS=4
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=10

# CORS 配置
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"] 

PYPPETEER_CHROMIUM_PATH=/chrome-linux/chrome
PYPPETEER_HOME=/app/.pyppeteer
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false